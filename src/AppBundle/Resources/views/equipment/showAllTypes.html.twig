{% extends '@App/layoutBase.html.twig' %}


{% block index %}

    <!-- Wrapper begin -->
    <div class="container-fluid" id="main-content-wrapper">
        <!-- Column Begin -->
        <div class="col-lg-2">
            <!-- Table begin -->
            <table class="table table-hover" id="myTables">
                <tc><h1>Types</h1></tc>
                    <tr>
                        <th>Types</th>
                    </tr>
                {% for t in types %}
                    <tr onclick="document.location = '{{ path('updateType', {'id': t.id}) }}'">
                        <td>{{ t.type }}</td>
                    </tr>
                {% endfor %}
            </table><!-- Table End -->
        </div><!-- Column End -->
    </div> <!-- Wrapper End-->


{% endblock %}
