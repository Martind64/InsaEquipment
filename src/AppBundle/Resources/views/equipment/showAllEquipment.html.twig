{% extends 'AppBundle::base.html.twig' %}


{% block body %}

    <!-- Wrapper begin -->
    <div class="container-fluid" id="main-content-wrapper">

        <div class="container-fluid">
            <div class="row">

                <!-- Flexible Content -->
                <!-- Sidebar Begin -->
                <div class="col-lg-2">
                    <div id="navigation-sidebar">
                        <div class="nav navbar">
                            <ul class="nav nav-pills nav-stacked">
                                <li class="active"><a href="http://localhost:8000/overview">Overview</a> </li>
                                <ul class="nav" id="viewCollapse">
                                    <li><a href="#">Equipment</a> </li>
                                    <li><a href="#">Calibrations</a> </li>
                                    <li><a href="#">Types</a> </li>
                                    <hr>
                                </ul>
                                <li class="active"><a href="#">Equipment</a></li>
                                <ul class="navbar nav" id="equipmentCollapse">
                                    <li > <a href="#createCollapse" data-toggle="collapse">Create</a> </li>
                                    <ul class="nav collapse" id="createCollapse">
                                        <li> <a href="http://localhost:8000/createEquipment" >Equipment</a> </li>
                                        <li> <a href="http://localhost:8000/createCalibration" >Calibration</a> </li>
                                        <li> <a href="http://localhost:8000/createInfo" >Type</a> </li>
                                        <hr>
                                    </ul>
                                    <li> <a href="http://localhost:8000/createEquipmentData" >Update</a> </li>
                                    <hr>
                                </ul>
                            </ul>
                        </div>
                    </div>
                </div><!-- Sidebar End -->
                <!-- Flexible Content END -->


                <div class="col-lg-10">
                    <table class="table table-hover">
                        <tc><h1>Equipment</h1></tc>
                        <th>
                            <tr>
                                <th>Iso Standard</th>
                                <th>Equipment ID</th>
                                <th>Model</th>
                                <th>Serial Nr.</th>
                            </tr>
                        </th>
                        {% for e in equipment %}
                            <tr onclick="document.location = 'http://localhost:8000/equipment/{{ e.ID }}'">
                                <td>{{ e.isoStandard }}</td>
                                <td>{{ e.equipmentID }}</td>
                                <td>{{ e.model }}</td>
                                <td>{{ e.serialNr }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div> <!-- Wrapper End-->


{% endblock %}
