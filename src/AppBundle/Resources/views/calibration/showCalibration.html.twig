{% extends 'AppBundle::base.html.twig' %}


{% block body %}
    <!-- Wrapper begin -->
    <div class="container-fluid" id="main-content-wrapper">

        <div class="row">
            <!-- Flexible Content -->
            <!-- Sidebar Begin -->
            <div class="col-lg-2">
                <div id="navigation-sidebar">
                    <div class="nav navbar">
                        <ul class="nav nav-pills nav-stacked">
                            <li class="active"><a href="{{ path('overview') }}">Overview</a> </li>
                            <ul class="nav" id="viewCollapse">
                                <li><a href="#">Equipment</a> </li>
                                <li><a href="#">Calibrations</a> </li>
                                <li><a href="{{ path('showAllTypes') }}">Types</a> </li>
                                <li><a href="{{ path('showAllUnits') }}">Units</a> </li>
                                <li><a href="{{ path('showAllPrefix') }}">Prefix</a> </li>
                                <hr>
                            </ul>
                            <li class="active"><a href="#">Equipment</a></li>
                            <ul class="navbar nav" id="equipmentCollapse">
                                <li > <a href="#createCollapse" data-toggle="collapse">Create</a> </li>
                                <ul class="nav collapse" id="createCollapse">
                                    <li> <a href="{{ path('createEquipment') }}" >Equipment</a> </li>
                                    <li> <a href="{{ path('createCalibration') }}" >Calibration</a> </li>
                                    <li> <a href="{{ path('createType') }}" >Type</a> </li>
                                    <li> <a href="{{ path('createUnit') }}" >Unit</a> </li>
                                    <li> <a href="{{ path('createPrefix') }}" >Prefix</a> </li>
                                    <hr>
                                </ul>
                            </ul>
                        </ul>
                    </div>
                </div>
            </div><!-- Sidebar End -->
            <!-- Flexible Content END -->
                <p><i>calibrated at: {{ calibration.calibrationDate|date('d-m-y') }} - status: {{ calibration.status?'active':'inactive' }}</i></p>
                <hr>
            <div class="col-lg-10">
                <p><b>equipment: </b>{{ calibration.equipment.equipmentId }}</p>
                <p><b>calibration institute: </b> {{ calibration.calibrationInstitute }}</p>
                <p><b>approved by: </b>{{ calibration.approvedBy }}</p>

            <table class="table table-hover" id="myTables">
                <tc><h2>Calibration
                        <a href="{{ path('addInfo', {'id': calibration.id}) }}"><button class="btn btn-primary btn-lg pull-right" type="button">add calibration</button></a>
                        <a href="{{ path('updateCalibration', {'id': calibration.id}) }}"><button class="btn btn-primary btn-lg pull-right" type="button">update</button></a>
                    </h2>
                </tc>
                <th>
                    <tr>
                        <th>Unit</th>
                        <th>Prefix</th>
                        <th>Measured At</th>
                        <th>uncertainty Requests</th>
                        <th>Actual Uncertainty</th>
                        <th>Lab Reference</th>
                        <th>uut</th>
                        <th>deviation</th>
                        <th>Adjustment Limit</th>
                        <th>comment</th>
                    </tr>
                </th>
                {% for i in info %}
                    <tr onclick="document.location = 'http://localhost:8000/updateInfo/{{ i.Id }}'">
                        <td>{{ i.unit.unit }}</td>
                        <td>{{ i.prefix.prefix }}</td>
                        <td>{{ i.measuredAt}} </td>
                        <td>{{ i.uncertaintyRequests }} </td>
                        <td>{{ i.actualUncertainty }} </td>
                        <td>{{ i.labReference }} </td>
                        <td>{{ i.uut }} </td>
                        <td>{{ i.deviation }} </td>
                        <td>{{ i.adjustmentLimit }} </td>
                        <td>{{ i.comment }} </td>
                    </tr>
                {% endfor %}


            </table>

            </div>

        </div>
    </div> <!-- Wrapper End-->


{% endblock %}