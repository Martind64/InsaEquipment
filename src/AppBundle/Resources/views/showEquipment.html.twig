{% extends 'AppBundle::base.html.twig' %}


{% block body %}

<head>
    <link rel="stylesheet" href="{{ asset('bundles/app/css/showEquipment.css') }}">
</head>
    <!-- Wrapper -->
<div class="container-fluid" id="wrapper">

    <div class="container-fluid">
        <div class="row">
            <!-- Flexible Content -->
            <!-- Sidebar Begin -->
            <div class="col-lg-2">
                    <div class="nav navbar" id="navigation-sidebar">
                        <ul class="nav nav-pills nav-stacked">
                            <li class="active"><a href="overview">Overview</a> </li>
                            <ul class="nav" id="viewCollapse">
                                <li><a href="#">Equipment</a> </li>
                                <li><a href="#">Calibrations</a> </li>
                                <li><a href="#">Types</a> </li>
                                <hr>
                            </ul>
                            <li class="active"><a href="#">Equipment</a></li>
                            <ul class="navbar nav" id="equipmentCollapse">
                                <li > <a href="#createCollapse" data-toggle="collapse">Create</a> </li>
                                <ul class="nav collapse" id="createCollapse">
                                    <li> <a href="createEquipmentData" >Equipment</a> </li>
                                    <li> <a href="createCalibration" >Calibration</a> </li>
                                    <li> <a href="createEquipmentType" >Type</a> </li>
                                    <hr>
                                </ul>
                                <li> <a href="createEquipmentData" >Update</a> </li>
                                <hr>
                            </ul>
                        </ul>
                </div>
            </div><!-- Sidebar End -->
            <!-- Flexible Content END -->

            <div class="container" id="main-content-wrapper">
                    <div class="col-lg-5">
                        <p><b>Id:</b> {{ equipment.id }}</p>
                        <p><b>serial nr.:</b> {{ equipment.serialNr }}</p>
                        <p><b>category:</b> {{ equipment.category }}</p>
                        <p><b>description:</b> {{ equipment.description }}</p>
                        <p><b>level:</b> {{ equipment.level }}</p>
                    </div>
                    <div class="col-lg-5">
                        <p><b>partner:</b> {{ equipment.partner }}</p>
                        <p><b>placement:</b> {{ equipment.placement }}</p>
                        <p><b>calibration interval:</b> {{ equipment.calibrationInterval }}</p>
                        <p>{#{{ equipment.nextCalibration }}#}</p><!-- need to know how to display date -->
                        <p><b>owner:</b> {{ equipment.owner }}</p>
                        <p><b>comment:</b> {{  equipment.comment }}</p>



                    </div>

            </div>


        </div>


    </div>


</div>


{% endblock %}