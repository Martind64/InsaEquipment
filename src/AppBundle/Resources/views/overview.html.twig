            <!-- Flexible Content END -->


            <div class="col-lg-10">
                <table class="table">
                    <tc><h1>Equipment</h1></tc>
                    <th>
                        <tr>
                            <th>Iso Standard</th>
                            <th>Equipment ID</th>
                            <th>Model</th>
                            <th>Serial Nr.</th>
                        </tr>
                    </th>
                    {% for e in equipmentData %}
                        <tr>
                            <td>{{ e.isoStandard }}</td>
                            <td>{{ e.equipmentID }}</td>
                            <td>{{ e.model }}</td>
                            <td>{{ e.serialNr }}</td>
