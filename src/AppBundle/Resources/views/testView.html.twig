                    <table class="table">
                        <th>
                            <tr>
                                <th>id</th>
                                <th>measured at</th>
                            </tr>
                        </th>
                        {% for i in id %}
                        <tr>
                            <td>{{ i.id }}</td>
                            <td>{{ i.measuredAt }}</td>
                            <td>{{ i.prefix.prefix }}</td>
                        </tr>

                        {% endfor %}
                    </table>

                </div>


            </div>


